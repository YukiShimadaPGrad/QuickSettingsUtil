<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center_vertical">

    <ImageButton
            android:src="@drawable/volume_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/sound_settings_widget_down" android:layout_weight="1"
            android:contentDescription="@string/volume_down" android:scaleType="fitCenter"/>
    <ImageButton
            android:src="@drawable/volume_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/sound_settings_widget_up" android:layout_weight="1"
            android:contentDescription="@string/volume_up" android:scaleType="fitCenter"/>
</LinearLayout>